<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
<div class="container-inks">

  <div class="top-games-wrap">
    
    <h1>Inks List</h1>
    <%= current_user.type %>,<%= current_user.customer_name %>
    ,
    <br>
    <div class="logout">
      <% if current_user.try(:type) == 'AdminUser' || current_user.try(:type) == 'SuperUser'%>
        <button type="button" class="btn btn-danger btn-md">
          <%= link_to admin_root_path do %>
              <i class="glyphicon glyphicon-wrench"></i> Admin
          <% end %>
        </button>
      <% end %>
      <button type="button" class="btn btn-primary btn-md">
        <%= link_to edit_user_registration_path do %>
            <i class="glyphicon glyphicon glyphicon-cog"></i> Settings
        <% end %>
      </button>
      <button type="button" class="btn btn-info btn-md">
        <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="glyphicon glyphicon-log-out"></i> Log out
        <% end %>
      </button>
    </div>
    
    <%= link_to 'New Ink', new_ink_path(@ink) %>
  
  <hr>
  <%= render 'inks/formfilter' %>
  <div class="table-wrap table-responsive" id="filterrific_results">
    <table class="table table-striped table-hover ">
      <thead>
        <tr class="sortable-table">
          <th>
            Cust-Id
          </th>
          <th>
            Id
          </th>
          <th>
            PMS #
          </th>
          <th class='hide-element'>
            Client
          </th>
          <th>
            Type
          </th>
          <th>
            Substrate
          </th>
          <th>
            Coating
          </th>
          <th>
            Ink Number
          </th>
          <th>
            Sap #
          </th>
          <th>
            Created
          </th>
          <th>
            Approved
          </th>
          <th>
            Comments
          </th>
          <th>
            Updated
          </th>
          <th>
            <span class="glyphicon glyphicon-pencil"></span>
          </th>
          <th>
            <span class="glyphicon glyphicon-trash"></span>
          </th>
        </tr>
      </thead>
    
      <tbody>
        <%= render "inks/ink" %> 
      </tbody>
    </table>

  </div> 
  
  
  </div>
</div>

<script>
//Get the button
var mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}

</script>




