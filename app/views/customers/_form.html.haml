= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |message|
          %li= message
  .col-sm-3
  .actions.well.col-sm-6
    
    .form-group
      = f.text_field :name, class: "form-control", :required => true, id: 'address_element', placeholder: "Name"
    
    .actions
      = f.submit 'Save', class: 'btn btn-primary  col-sm-6'

      = link_to 'Back', customers_path ,class: "btn btn-default col-sm-6"
  .col-sm-3 
  
  