<% if flash[:alert]%>
  <%= js add_gritter(flash[:alert], title: "Alert", sticky: false, image: :warning) %>
<% elsif flash[:error]%>
  <%= js add_gritter(flash[:error], title: "Error", sticky: false, image: :notice, time: 1000) %>
<% else flash[:notice]%>
  <%= js add_gritter(flash[:notice], title: "Notification", sticky: false, image: :success, time: 3000) %>
<% end %>